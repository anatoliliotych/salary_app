.panel.panel-default
  .panel-heading
    %h3
      2. Выберите сотрудника.
  .panel-body
    %form{ action: "/user", method: "POST" }
      .container
        .row
          .col-md-3
            %select{ name: "name"}
              - @users.keys.sort.each do |name|
                - selected = @selected_user && @selected_user[:name] == name
                %option{value: "#{URI.encode(name)}", selected: selected }=name
          .col-md-3
            %button{ type: "submit", class: 'btn btn-default btn-xs'}='Show'

